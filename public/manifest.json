{
  "manifest_version": 3,
  "name": "TrackThis",
  "version": "1.0",
  "description": "Помечай страницы как прочитанные",

  "permissions": ["tabs"],

  "background": {
    "service_worker": "./background/main.js",
    "type": "module"
  },

  "action": {
    "default_popup": "src/popup/index.html",
    "default_icon": "logo.png"
  },

  "options_ui": {
    "page": "src/ui/app/index.html",
    "open_in_tab": true
  }
}