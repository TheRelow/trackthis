{
  "manifest_version": 2,
  "name": "TrackThis",
  "version": "1.0",
  "description": "Помечай страницы как прочитанные",
  "permissions": [ "tabs" ],
  "background": {
    "scripts": [ "background/main.js" ],
    "type": "module"
  },
  "browser_action": {
    "default_popup": "src/popup/index.html",
    "default_icon": "logo.png"
  },
  "options_ui": {
    "page": "src/ui/app/index.html",
    "open_in_tab": true
  }
}